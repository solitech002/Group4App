<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f4f4f4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- About Us Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textColor="#0078D7"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- About Us Content -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MedaDish is your trusted source for personalized dietary advice. We cater to unique health needs and preferences to help you feel better. Our team is dedicated to providing you with the best recommendations tailored specifically for you."
            android:textColor="#333"
            android:textSize="16sp" />

        <!-- Team Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Team"
            android:textSize="18sp"
            android:textColor="#0078D7"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our team consists of expert nutritionists and developers working to ensure you get the best possible dietary recommendations."
            android:textSize="16sp"
            android:textColor="#333"/>
    </LinearLayout>

</ScrollView>



